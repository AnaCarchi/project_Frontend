{
  "expo": {
    "name": "Catálogo Ropa",
    "slug": "catalogo-ropa-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#E91E63"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": [
      "ios",
      "android"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tuempresa.catalogoropa",
      "buildNumber": "1.0.0",
      "icon": "./assets/icon.png",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta aplicación necesita acceso a la cámara para tomar fotos de productos y categorías.",
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceso a la galería para seleccionar imágenes de productos y categorías.",
        "NSMicrophoneUsageDescription": "Esta aplicación necesita acceso al micrófono para grabar videos de productos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#E91E63"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ],
      "package": "com.tuempresa.catalogoropa",
      "versionCode": 1
    },
    "extra": {
      "eas": {
        "projectId": "tu-project-id-aqui"
      }
    },
    "owner": "tu-username-expo",
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación accede a tus fotos para permitirte seleccionar imágenes de productos y categorías.",
          "cameraPermission": "La aplicación accede a tu cámara para permitirte tomar fotos de productos y categorías."
        }
      ],
      "expo-font"
    ]
  }
}
